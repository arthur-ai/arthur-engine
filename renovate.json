{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": ["* 0-4 * * *"],
  "automergeSchedule": ["* 0-4 * * *"],
  "timezone": "America/New_York",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "autoApprove": true
    },
    {
      "matchPackageNames": [
        "python",
        "torch",
        "numpy"
      ],
      "enabled": false
    }
  ]
}
