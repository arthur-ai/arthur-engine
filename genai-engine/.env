GENAI_ENGINE_HALLUCINATION_CHECK_MAX_TOKEN_LIMIT=6000
GENAI_ENGINE_TOXICITY_CHECK_MAX_TOKEN_LIMIT=1200
GENAI_ENGINE_HALLUCINATION_V3=False

