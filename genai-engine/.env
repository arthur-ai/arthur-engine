#### Database ####
##################
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_URL=
POSTGRES_PORT=
POSTGRES_DB=
POSTGRES_CLIENT_CONNECTION_POOL_SIZE=5
POSTGRES_CLIENT_CONNECTION_POOL_MAX_OVERFLOW=15
POSTGRES_USE_SSL=true
